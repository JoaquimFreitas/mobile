                android:key="notification_on_preference"
                android:title="@string/preference_notification_new_title" 
                android:summaryOn="@string/preference_notification_new_summary_on"
                android:summaryOff="@string/preference_notification_new_summary_off"
                android:defaultValue="false"/>
  
  </PreferenceCategory>
